# .windsurf-env
# Environment variables for Windsurf IDE configuration

# Operating System Configuration
WINDSURF_OS=windows11
WINDSURF_SHELL=powershell

# Node.js Configuration
WINDSURF_NODE_VERSION=18.17.0
WINDSURF_PACKAGE_MANAGER=npm

# Framework Configuration
WINDSURF_FRAMEWORK=next@14.0.3
WINDSURF_PROJECT_TYPE=next-js-pwa

# TypeScript Configuration
WINDSURF_TYPESCRIPT=true
WINDSURF_STRICT_MODE=true

# Feature Flags
WINDSURF_PWA_ENABLED=true
WINDSURF_OFFLINE_SUPPORT=true

# UI Configuration
WINDSURF_UI_FRAMEWORK=shadcn-ui
WINDSURF_DESIGN_SYSTEM=mixed
WINDSURF_GLASSMORPHIC_PAGES=auth,calendar
WINDSURF_NEUMORPHIC_PAGES=profile,admin

# Development Configuration
WINDSURF_DEV_MODE=true
WINDSURF_DEBUG_LEVEL=verbose

# Project Structure
WINDSURF_APP_ROUTER=true
WINDSURF_COMPONENT_STRUCTURE=feature-based

# Authentication
WINDSURF_AUTH_PROVIDER=firebase
WINDSURF_ROLE_BASED_AUTH=true

# Database
WINDSURF_DATABASE=firestore
WINDSURF_OFFLINE_PERSISTENCE=true

# Testing
WINDSURF_TESTING_FRAMEWORK=jest
WINDSURF_E2E_TESTING=playwright